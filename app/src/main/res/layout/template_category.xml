<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_small"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgcate"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#33b5e6"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/category_mask"
            />

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Display1"
            android:id="@+id/tittleCate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CategorÃ­as"
            android:textColor="@android:color/white"
            android:layout_alignBottom="@id/imgcate"
            android:padding="@dimen/padding_small"
            />
        <ImageView
            android:id="@+id/ic_genere"
            android:layout_width="@dimen/icon_wh"
            android:layout_height="@dimen/icon_wh"
            android:src="@mipmap/ic_genere"
            android:layout_below="@id/imgcate"
            android:layout_margin="@dimen/padding_small"
            />
        <TextView
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:id="@+id/txt_genere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Genero"
            android:layout_toRightOf="@id/ic_genere"
            android:layout_alignBottom="@id/ic_genere"
            android:layout_marginTop="@dimen/padding_small"
            android:layout_marginBottom="@dimen/padding_small"
            />
        <ImageView
            android:id="@+id/ic_start"
            android:layout_width="@dimen/icon_wh"
            android:layout_height="@dimen/icon_wh"
            android:src="@mipmap/ic_genere"
            android:layout_below="@id/ic_genere"
            android:layout_margin="@dimen/padding_small"
            />
        <TextView
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:id="@+id/txt_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:layout_toRightOf="@id/ic_start"
            android:layout_alignBottom="@id/ic_start"
            android:layout_marginTop="@dimen/padding_small"
            android:layout_marginBottom="@dimen/padding_small"
            />

    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>